<div class="container">
  <div class="row">
    <h3>投稿</h3>
      <div class="mx-auto mt-3">

        <%= form_with model:@post_pet , url: post_pets_path ,local: true do |f| %>
        
        <div>お気に入りの一枚
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group row">
          <div class="col-sm-9">
          <%= f.text_field :title, placeholder:"ここに題名を記述します", class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group row">
          <div>
            <label>タグ(,で区切ると複数タグ登録できます)</label>
            <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group row">
          <div>
            <%= f.rich_text_area :content, placeholder:"ここに紹介文を記述します", class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-sm-9 ">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        </div>

        <% end %>
      </div>
  </div>
</div>