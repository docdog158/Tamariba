<div class="container">
  <div class="row">
    <h3>投稿する</h3>
      <div class="mx-auto">

        <%= form_with model:@post_pets, local: true do |f| %>

        <div class="form-group row">
          <%= f.label :image, '商品画像', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.file_field :image, accept: "image/*", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :taile, '題名', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :taile, placeholder:"ここに題名を記述します", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :introductionname, '紹介文', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :introductionname, placeholder:"ここに紹介文を記述します", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-9 ">
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        </div>

        <% end %>
      </div>
  </div>
</div>