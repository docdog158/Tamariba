<div class="container">
  <div class="row">
    <h3>編集</h3>
      <div class="mx-auto mt-3">
      <%= form_with model:@post_pet, url: post_pet_path(@post_pet), local:true do |f| %>
        <div>お気に入りの一枚
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group row">
          <div class="col-sm-9">
          <%= f.text_field :title, placeholder:"ここに題名を記述します", class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group row">
          <div>
            <label>タグ(,で区切ると複数タグ登録できます)</label>
            <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
          </div>
        </div>
        
        <div class="form-group row">
          <div>
            <%= f.rich_text_area :content, placeholder:"ここに紹介文を記述します", class: 'form-control' %>
          </div>
        </div>
        <div class="row justify-content-center">
          <%= f.submit "変更を保存", class: 'btn btn-lg btn-success' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>