<div class='container mt-4'>
  <h2 class="offset-md-2 mt-4">商品編集</h2>
  <div class="col row justify-content-center mt-4">
    <div class='col-md-6'>
    <%= form_with model:@post_pet, url: post_pet_path(@post_pet), local:true do |f| %>
      <div class="form-group d-flex">
        <div class="p-2" style="width: 172px;"><%= f.label :タイトル %></div>
        <div class="p-2" style="width: 306px;"><%= f.text_field :title, class: "form-control name", placeholder:'タイトル' %></div>
      </div>
      <div class="form-group d-flex">
        <div class="p-2" style="width: 172px;"><%= f.label :投稿 %></div>
        <div class="p-2" style="width: 306px;"><%= f.text_area :introduction, class: "form-control introduction", rows: "6", placeholder:'投稿文' %></div>
      </div>
      <div class="form-group d-flex">
        <label>タグ(,で区切ると複数タグ登録できます)</label>
        <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
      </div>
      <div class="row justify-content-center">
        <%= f.submit "変更を保存", class: 'btn btn-lg btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>