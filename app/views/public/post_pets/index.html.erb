<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%#= render 'books/new', book: @book ,user: @user %>
    </div>

    <div class="col">
      <h2>Posts</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>Title</th>
            <th>User</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @post_pets.each do |post_pet| %>
        <tbody>
          <tr>
            <td>
              <%= link_to post_pet_path(post_pet.id) do %>
                <%= post_pet.title %>
              <% end %>
            </td>

            <td>
              <%= link_to customers_my_page_path(post_pet.customer) do %>
                <%= image_tag post_pet.customer.get_profile_image(100,100) %>
                <%= post_pet.customer.name %>
              <% end %>
            </td>

            <td>
              <%= post_pet.content %>
            </td>

          </tr>
        </tbody>
        <% end %>

      </table>
    </div>

  </div>
</div>