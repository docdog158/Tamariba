<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <table class='table'>
        <tr><%= image_tag @customer.get_profile_image, size:'100x100' %></tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @customer.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @customer.introduction %></th>
        </tr>

        <tr>
          <th>follows</th>
          <th><%= link_to @customer.followings.count, customer_followings_path(@customer) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to @customer.followers.count, customer_followers_path(@customer) %></th>
        </tr>


      </table>
      <%= render 'follow', cust: @customer %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <h2><%= @customer.name %>の投稿一覧</h2>
        <div class='d-flex flex-wrap'>
          <% @post_pets.each do |post_pet| %>
            <div class="d-flex flex-wrap col-md-6">
              <div class="card m-4 w-100" style="">
                <div class="card-body text-center">
                  
                  <div class="card-title">
                    <%= link_to post_pet_path(post_pet.id) do %>
                      <%= post_pet.title %>
                    <% end %>
                  </div>
                  
                  <div id="favorite_btn_<%= post_pet.id %>" class="card-body__favorite-position">
                    <%= image_tag post_pet.image, size: "200x180" %>
                    <%= render "favorites/btn", post_pet: post_pet %>
                  </div>
                  
                  <div>
                    <% strip_tags(post_pet.content.to_s).gsub(/[\n]/,"").strip.truncate(20) %>
                  </div>
                  
                  <div>
                    <%= link_to customer_path(post_pet.customer) do %>
                      <%= image_tag post_pet.customer.get_profile_image, size:"50x50" %>
                      <%= post_pet.customer.name %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
    </div>
  </div>
</div>