<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h2>Posts</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @customer.each do |customer| %>
        <tbody>
          <tr>

            <td>
              <%= link_to customer_path(post_pet.customer) do %>
                <%= image_tag post_pet.customer.get_profile_image, size:"100x100" %>
                <%= post_pet.customer.name %>
              <% end %>
            </td>

            <td>
              <%= render 'follow', customer: @customer %>
            </td>

          </tr>
        </tbody>
        <% end %>

      </table>
    </div>

  </div>
</div>