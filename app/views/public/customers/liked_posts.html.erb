<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="headline mt-5 ml-5">いいねした投稿</h4>
        <div class='d-flex flex-wrap offset-md-1 col-md-7 row'>
          
          <% @liked_posts.each do |post_pet| %>
            <div class="d-flex flex-wrap col-md-6">
              <div class="card m-4 w-100" style="">
                <div class="card-body text-center">
                  
                  <div class="card-title">
                    <%= link_to post_pet_path(post_pet.id) do %>
                      <%= post_pet.title %>
                    <% end %>
                  </div>
                  
                  <div>
                    <%= image_tag post_pet.image, size: "200x180" %>
                  </div>
                  
                  <div id="favorite_btn_<%= post_pet.id %>">
                    <%= render "public/favorites/btn", post_pet: post_pet %>
                  </div>
                  
                  <div>
                    <% strip_tags(post_pet.content.to_s).gsub(/[\n]/,"").strip.truncate(20) %>
                  </div>
                  
                  <div>
                    <%= link_to customer_path(post_pet.customer) do %>
                      <%= image_tag post_pet.customer.get_profile_image, size:"50x50" %>
                      <%= post_pet.customer.name %>
                    <% end %>
                  </div>
                  
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <div class="d-flex justify-content-center">
      <%= paginate @liked_posts, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>