<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @range == "ユーザー検索" %>

        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td>
              <%= link_to customer_path(customer) do %>
                <%= image_tag customer.get_profile_image, size:"100x100" %>
                <%= customer.name %>
                <%= customer.introduction %>
              <% end %>
            </td>

            <td>
               <%#= render 'public/customers/follow', cust: @customer %>
            </td>
          </tr>
        </tbody>
        <% end %>
      <% else %>

        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>


        <% @post_pets.each do |post_pet| %>
        <tbody>
          <tr>
            <td>
              <%= link_to customer_path(post_pet.customer) do %>
                <%= image_tag post_pet.customer.get_profile_image, size:"100x100" %>
                <%= post_pet.customer.name %>
              <% end %>
            </td>

            <td>
              <%= link_to post_pet_path(post_pet.id) do %>
                <%= post_pet.title %>
              <% end %>
            </td>

            <td>
              <%= link_to post_pet_path(post_pet.id) do %>
                <%= post_pet.content %>
              <% end %>
            </td>
          </tr>
        </tbody>

      <% end %>
      <% end %>
    </table>
  </div>
</div>