<div class="container">
  <div class="row">
    <div class="col-md-8 mt-4">
    <div>
      <h3 class="mb-0">新規会員登録</h3>
    </div>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render 'layouts/errors', obj: resource %>

      <table class="table">
        <tbody>
          <tr>
            <th>名前</th>
            <td>
              <label for="name">名前</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-2" %>
            </td>
          </tr>
            <th>メールアドレス</th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="form-group text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
      <div class="col-md-4 mt-4">
        <div class="card">
          <div class="card-header text-center">
            <h3 class="mb-0">既に登録済みの方</h3>
          </div>
          <div class="card-body text-center">
            <%= render "public/shared/links" %> からログインしてください
          </div>
        </div>
      </div>
    </div>
  </div>