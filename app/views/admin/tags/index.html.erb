<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="p-2">タグ一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th scope='col' style='width: 10%'>タグ</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= link_to 'Destroy', admin_tag_path(@tag), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>