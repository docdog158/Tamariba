<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @range == "Customer" %>
      <thead>
        <tr>
          <th>title</th>
          <th>user</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @post_pet.each do |post_pet| %>
            <td>
              <%= link_to customer_path(post_pet.customer) do %>
                <%= image_tag post_pet.customer.get_profile_image, size:"100x100" %>
                <%= post_pet.customer.name %>
              <% end %>
            </td>
            
            <td>
              <%= link_to post_pet_path(post_pet.id) do %>
                <%= post_pet.title %>
              <% end %>
            </td>
            
            <td>
              <%= link_to post_pet_path(post_pet.id) do %>
                <%= post_pet.content %>
              <% end %>
            </td>
        </tr>
      </tbody>
      
      <% else %>
        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @customer.each do |customer| %>
        <tbody>
          <tr>

            <td>
              <%= link_to customer_path(post_pet.customer) do %>
                <%= image_tag post_pet.customer.get_profile_image, size:"100x100" %>
                <%= post_pet.customer.name %>
              <% end %>
            </td>

            <td>
              <%= render 'follow', customer: @customer %>
            </td>

          </tr>
        </tbody>
        <% end %>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
</div>